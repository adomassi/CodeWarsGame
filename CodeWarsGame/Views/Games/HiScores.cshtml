@model IEnumerable<CodeWarsGame.Models.Scores>

@{
    ViewBag.Title = "HiScores";
}

<h2>HiScores</h2>

<p>
    @Html.ActionLink("Back to Main Page", "Game")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalSuccessfullTasks)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSuccessfullTasks)
            </td>
            <td>
                 @Html.ActionLink("View Successfull Tasks", "SuccessfullTasks",
                 new
                 {
                     playerName = item.PlayerName

                 })
            </td>
        </tr>
    }

</table>
